<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VeryChallenging.Views.BMICalculator">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Welcome to the BMI Calculator!" HorizontalTextAlignment="Center" TextColor="White" FontSize="20"/>
            </Frame>
            <Label Text="Let's get started..." FontSize="20" TextColor="Black" Padding="30,10,30,10"/>
            <Editor x:Name="Inp_heightEditor" Placeholder="Please enter height in inches" PlaceholderColor="Gray" BackgroundColor="Yellow" />
            <Editor x:Name="Inp_weightEditor" Placeholder="Please enter weight in pounds" PlaceholderColor="Gray" BackgroundColor="Yellow" />
            <Button x:Name="Btn_BMIbutton" Text="Click to Calculate BMI"  Clicked="Btn_BMIClicked" />
            <Label x:Name="Lbl_BMIlabel" Text= "Your BMI is ..."  FontSize="36" TextColor="Purple" />


        </StackLayout>
    </ContentPage.Content>
</ContentPage>